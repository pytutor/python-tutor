n_s = 30;
r_s = 2.5;
m_s = [1,2,3];

[X_s,Y_s,Z_s] = sphere(n_s);
figure
surf(m_s(1)+r_s*X_s,m_s(2)+r_s*Y_s,m_s(3)+r_s*Z_s,X_s+Y_s+Z_s);
axis equal

n_c = 40;
r_c = 0.5;
l_c = 2;
[X_c,Y_c,Z_c] = cylinder(r_c,n_c);
figure
surf(X_c,Y_c,l_c*Z_c,X_c+Y_c);
axis equal

n_e  = 50;
xc_e = 5; yc_e = 5; zc_e = 10;
rx_e = 6;
ry_e = 5;
rz_e = 3;

[X_e,Y_e,Z_e] = ellipsoid(xc_e,yc_e,zc_e,rx_e,ry_e,rz_e,n_e);
figure
surf(X_e,Y_e,Z_e,X_e+Y_e+Z_e);
axis equal

